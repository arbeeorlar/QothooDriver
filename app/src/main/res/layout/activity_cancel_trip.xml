                    <EditText

                        android:id="@+id/txtTripDate"
                        style="@style/large_code_face"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:hint="Date"
                        android:inputType="date"
                        android:lines="1"
                        android:paddingLeft="10dp">

                    </EditText>


                    <include
                        android:id="@+id/wait_icon"
                        layout="@layout/wait_icon_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView3"
                        android:layout_gravity="center"
                        android:visibility="gone" />



                    <LinearLayout
                        android:id="@+id/viewFareSetUp"
                        android:layout_marginTop="10dp"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:orientation="vertical"
                        android:padding="10dip">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.90"
                                android:text="Fare Estimate"
                                android:textColor="@color/approved_text_color"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtBaseType"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.90"
                                android:text="Estmated Distance"
                                android:textColor="@color/approved_text_color"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtDistance"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.90"
                                android:text="Estimated Time"
                                android:textColor="@color/approved_text_color"
                                android:textStyle="normal" />

                            <TextView
                                android:id="@+id/txtTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.90"
                                android:text="Total"
                                android:textColor="@color/approved_text_color"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtTotal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.30"
                                android:text=""
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>


                    <Button
                        android:id="@+id/txtProceed"
                        style="@style/large_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:clickable="true"
                        android:elevation="6dp"
                        android:text="Proceed"
                        android:textColor="@color/White"
                        android:textStyle="bold" />


                </LinearLayout>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>


</android.support.design.widget.CoordinatorLayout>
